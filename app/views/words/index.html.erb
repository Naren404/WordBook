<!------------------------------NavBar------------------------------------------------>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <%= link_to root_path, class:"navbar-brand" do %>
        <%= image_tag "wordbooklogo.png", width:"30", height:"30", alt:"WordBook" %>
    <% end %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item p-1">
          <button class="btn btn-outline-primary w-100" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">
              All Categories
          </button>
        </li>
        <li class="nav-item p-1">
          <button type="button" class="btn btn-outline-success w-100" data-bs-toggle="modal" data-bs-target="#newWordCategoryModal">
              Add New Word Category <i class="fas fa-plus-circle"></i>
          </button>
        </li>
        <li class="nav-item p-1">
          <button type="button" class="btn btn-outline-success w-100" data-bs-toggle="modal" data-bs-target="#newWordModal">
              Add New Word <i class="fas fa-plus-circle"></i>
          </button>
        </li>
      </ul>
      <div class="d-flex">
        <%= link_to "Logout", destroy_user_session_path, method: :delete,class:"btn btn-outline-danger w-100"  %>
      </div>
      
    </div>
  </div>
</nav>
<!-------------------##############################################------------------------>

<div class="container my-2">
    <input class="form-control me-2" type="search" placeholder="Search for the WORD." aria-label="Search">

  <hr />
  <!--------------- words of currently requested category----------------->
    <%= render partial: "words" %>
<!----------------------------------------------------------------------->
</div>


<!------------------------side bar---for all categories----offcanvas--------------------->
<div class="offcanvas offcanvas-top" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
  <div class="offcanvas-header">
    <p id="offcanvasRightLabel"></p>
    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <div class="container-fluid">
        <%= render partial: "word_categories/word_category", locals:{word_categories:@word_categories} %>
    </div>
  </div>
</div>
<!-------------$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$------------------------->

<!-- Modal for adding new category -->
<div class="modal fade" id="newWordCategoryModal" tabindex="-1" aria-labelledby="newWordCategoryModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newWordCategoryModalLabel">New Word Category</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render partial:"word_categories/form", locals:{word_category:@word_category} %>
      </div>
    </div>
  </div>
</div>
<!-- Modal for adding new word -->
<div class="modal fade" id="newWordModal" tabindex="-1" aria-labelledby="newWordModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newWordModalLabel">New Word Category</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render partial:"form" %>
      </div>
    </div>
  </div>
</div>
